<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark">

    <div class="container">

        <nav id="burgerMenu" class="navbar navbar-dark" style="display: none;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarBurgerMenu" aria-controls="navbarBurgerMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarBurgerMenu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" onclick="logout()">Log out</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/creditlimit">Set credit limit</a>
                    </li>

                </ul>
            </div>
        </nav>

        <div id="alert-area">
            <div id="template-warning" class="alert alert-warning" role="alert" style="display:none;">
                <span id="placeholder-for-warning-text">Warning</span>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>

        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>2018 - 2019 &copy; LARPay</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>

    <script>
        if (isLoggedIn())
            $('#burgerMenu').show();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
